<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widgetWeather"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">


    <RelativeLayout
        android:layout_width="192dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/widget_background">


        <TextView
            android:id="@+id/textViewWidgetDay0DayOfWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/weather_font"
            android:singleLine="true"
            android:textColor="@color/widget_text_color"
            android:textSize="14dp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/imageViewWidgetDay0WeatherStatus"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="20dp"
            android:alpha="0.8"
            android:src="@drawable/weather_partly_cloud"
            app:srcCompat="@drawable/weather_partly_cloud" />

        <TextView
            android:id="@+id/textViewWidgetDay0Temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/widget_text_color"
            android:textSize="35sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewWidgetDay0Location"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:duplicateParentState="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/widget_text_color"
            android:textStyle="bold|italic">

            <requestFocus
                android:duplicateParentState="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        </TextView>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/widget_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewWidgetDay1DayOfWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:textAlignment="center"
                android:textColor="@color/widget_text_color"
                android:textSize="12dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewWidgetDay1WeatherStatus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:alpha="0.8"
                android:src="@drawable/weather_rain_thunder" />

            <TextView
                android:id="@+id/textViewWidgetDay1Temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textAlignment="center"
                android:textColor="@color/widget_text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/widget_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewWidgetDay2DayOfWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:textAlignment="center"
                android:textColor="@color/widget_text_color"
                android:textSize="12dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewWidgetDay2WeatherStatus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:alpha="0.8"
                android:src="@drawable/weather_rain_thunder"
                app:srcCompat="@drawable/weather_rain_thunder" />

            <TextView
                android:id="@+id/textViewWidgetDay2Temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textAlignment="center"
                android:textColor="@color/widget_text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/widget_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewWidgetDay3DayOfWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:textAlignment="center"
                android:textColor="@color/widget_text_color"
                android:textSize="12dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewWidgetDay3WeatherStatus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:alpha="0.8"
                android:src="@drawable/weather_rain_thunder"
                app:srcCompat="@drawable/weather_rain_thunder" />

            <TextView
                android:id="@+id/textViewWidgetDay3Temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textAlignment="center"
                android:textColor="@color/widget_text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/widget_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewWidgetDay4DayOfWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:textAlignment="center"
                android:textColor="@color/widget_text_color"
                android:textSize="12dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewWidgetDay4WeatherStatus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:alpha="0.8"
                android:src="@drawable/weather_rain_thunder"
                app:srcCompat="@drawable/weather_rain_thunder" />

            <TextView
                android:id="@+id/textViewWidgetDay4Temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textAlignment="center"
                android:textColor="@color/widget_text_color"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>